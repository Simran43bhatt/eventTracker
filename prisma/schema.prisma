generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id          String    @id @default(cuid())
  name        String
  phone       String
  email       String    @unique
  source      String?
  metaData    Json?
  lastVisited DateTime?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  events      Event[]

  @@index([phone])
}

model Event {
  id               String   @id @default(cuid())
  eventGeneratedId String   @default(cuid())
  eventName        String
  appName          AppName
  metaata         Json
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt

  userId String
  user   User   @relation(fields: [userId], references: [id])

  @@index([userId, createdAt])
  @@index([eventName, createdAt])
  @@index([appName, eventName])
  @@index([createdAt])
}

enum AppName {
  WEBSITE
}
